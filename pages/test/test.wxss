/* pages/test/test.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size:100%; 
}
.userinfo{
  margin-top: 30rpx;
  align-items: center;
  height: 140rpx;
  width: 100%;
  background: white;
  display: flex;
  justify-content:left;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  border-top:none;
  flex-direction: row;
  transition: all 300ms ease;
  font-size:100%; 
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  margin-left: 4%;
}

.nickText{
  margin-left: 2%;
  letter-spacing: 5rpx;
  font-size: 110%;
}

.titleBlock{
  background: white;
  border: 1rpx dashed rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  border-top: none;
  display: flex;
  transition: all 300ms ease;
  width:100%;
  flex-direction: column;
  box-sizing: border-box;
  align-content:center;
  margin-top:30rpx;  
  height:fit-content;
}

.titleText{
  margin-top:30rpx;
  margin-left: 5%;
  margin-bottom: 10rpx;
  font-size:80%;
  color: grey;
  letter-spacing: 4rpx;
}

.coursecontainer{
  background: white;
  border: 1rpx dashed rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  border-top: none;
  display: flex;
  transition: all 300ms ease;
  height: 140rpx;
  width:100%;
  flex-direction: column;
  box-sizing: border-box;
  align-items: center;
}

.courseIcon{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 1;
  background-size: cover;
  background-color: white;
  margin-left: 5%;
}

.course{
  width: 100%;
  align-items: center;
  font-size: 100%;
  color:#000000;
  text-align: left;
  height:fit-content;
  display:flex;
}
.cName{
  margin-left: 4%;
  letter-spacing: 1rpx;
}
