  padding: 20rpx 30rpx 30rpx;
}
.reserve_text{
  border: 1rpx solid #E6E6E6;
  width: 94%;
  height: 120rpx;
  padding: 20rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
  border-radius: 6rpx;
}
.reserve_pay{
  font-size: 28rpx;
  color: #999;
  margin-top: 15rpx;
  text-indent: 2em;
}
.reserve_warn{
  display: flex;
  align-items: center;
}
.reserve_warn view{
  margin-left: 15rpx;
}
.reserve_money{
  color: #FF7272;
}
.footer{
